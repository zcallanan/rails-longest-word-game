<div class="games-container">
  <h1>New Game</h1>
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col">
        <p class="text-center justify-content-center border rounded shadow box"><%= letter %></p>
      </div>
    <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <div class="input-group mb-3">
      <input type="text" name="word" value="<%= params[:word] %>" class="form-control" placeholder="Enter the word..." >
      <%= hidden_field_tag :letters, @letters %>
      <div class="input-group-append">
        <input class="btn btn-secondary" type="submit" value="Play">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
  </form>
</div>
